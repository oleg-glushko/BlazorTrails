@using BlazingTrails.Client.State

@inject AppState AppState

@if (AppState.FavoriteTrailsState.IsFavorite(Trail))
{
    <button class="btn btn-outline-primary ml-1" title="Favorite"
            onclick="@(() => AppState.FavoriteTrailsState.RemoveFavorite(Trail))">
        <i class="bi bi-heart-fill" />
    </button>
}
else
{
    <button class="btn btn-outline-primary ml-1" title="Favorite"
            onclick="@(() => AppState.FavoriteTrailsState.AddFavorite(Trail))">
        <i class="bi bi-heart" />
    </button>
}

@code {
    [Parameter, EditorRequired]
    public Trail Trail { get; set; } = null!;
}
